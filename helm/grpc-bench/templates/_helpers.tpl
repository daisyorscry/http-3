{{/* Return chart name, hormati nameOverride */}}
{{- define "grpc-bench.name" -}}
{{- default .Chart.Name .Values.nameOverride | trunc 63 | trimSuffix "-" -}}
{{- end -}}

{{/* Return fullname: fullnameOverride > smart compose */}}
{{- define "grpc-bench.fullname" -}}
{{- if .Values.fullnameOverride -}}
{{- .Values.fullnameOverride | trunc 63 | trimSuffix "-" -}}
{{- else -}}
{{- $name := include "grpc-bench.name" . -}}
{{- if contains $name .Release.Name -}}
{{- .Release.Name | trunc 63 | trimSuffix "-" -}}
{{- else -}}
{{- printf "%s-%s" .Release.Name $name | trunc 63 | trimSuffix "-" -}}
{{- end -}}
{{- end -}}
{{- end -}}

{{/* chart label string */}}
{{- define "grpc-bench.chart" -}}
{{- printf "%s-%s" .Chart.Name .Chart.Version | replace "+" "_" | trunc 63 | trimSuffix "-" -}}
{{- end -}}

{{/* Common labels */}}
{{- define "grpc-bench.labels" -}}
helm.sh/chart: {{ include "grpc-bench.chart" . }}
app.kubernetes.io/name: {{ include "grpc-bench.name" . }}
app.kubernetes.io/instance: {{ .Release.Name }}
app.kubernetes.io/version: {{ .Chart.AppVersion | quote }}
app.kubernetes.io/managed-by: {{ .Release.Service }}
{{- end -}}

{{/* Selector labels (harus match pod template) */}}
{{- define "grpc-bench.selectorLabels" -}}
app.kubernetes.io/name: {{ include "grpc-bench.name" . }}
app.kubernetes.io/instance: {{ .Release.Name }}
{{- end -}}

{{/* ServiceAccount name (aman kalau field nil) */}}
{{- define "grpc-bench.serviceAccountName" -}}
{{- if (default false .Values.serviceAccount.create) -}}
{{- default (include "grpc-bench.fullname" .) .Values.serviceAccount.name -}}
{{- else -}}
default
{{- end -}}
{{- end -}}
