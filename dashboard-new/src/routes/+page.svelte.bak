<script lang="ts">
	import { onMount } from 'svelte';

	let mode = $state<'single' | 'compare'>('single');
	let scenario = $state('medium');
	let protocol = $state('h2');
	let clients = $state(100);
	let payload = $state(512);
	let duration = $state(60);
	let rps = $state(2000);
	let period = $state(200);
	let jitter = $state(100);
	let ramp = $state('30@1000,30@2000,30@4000');

	let running = $state(false);
	let progress = $state('');
	let result: any = $state(null);
	let comparisonResult: any = $state(null);

	const scenarios = [
		{ value: 'low', label: 'Low Traffic (Periodic)', icon: 'ðŸ“Š' },
		{ value: 'medium', label: 'Medium Traffic (Constant RPS)', icon: 'ðŸ“ˆ' },
		{ value: 'high', label: 'High Traffic (Ramping)', icon: 'ðŸš€' }
	];

	const protocols = [
		{ value: 'h2', label: 'HTTP/2', color: 'bg-blue-500' },
		{ value: 'h3', label: 'HTTP/3', color: 'bg-purple-500' }
	];

	async function runBenchmark() {
		running = true;
		progress = 'Starting benchmark...';
		result = null;

		try {
			const response = await fetch('/api/benchmark', {
				method: 'POST',
				headers: { 'Content-Type': 'application/json' },
				body: JSON.stringify({
					scenario,
					protocol,
					clients,
					payload,
					duration,
					rps,
					period,
					jitter,
					ramp
				})
			});

			const data = await response.json();

			if (data.error) {
				progress = `Error: ${data.error}`;
			} else {
				result = data;
				progress = 'Benchmark completed!';
			}
		} catch (err) {
			progress = `Error: ${err}`;
		} finally {
			running = false;
		}
	}

	async function runComparison() {
		running = true;
		progress = 'Running HTTP/2 benchmark...';
		comparisonResult = null;

		try {
			const response = await fetch('/api/benchmark/compare', {
				method: 'POST',
				headers: { 'Content-Type': 'application/json' },
				body: JSON.stringify({
					scenario,
					clients,
					payload,
					duration,
					rps,
					period,
					jitter,
					ramp
				})
			});

			const data = await response.json();

			if (data.error) {
				progress = `Error: ${data.error}`;
			} else {
				comparisonResult = data;
				progress = 'Comparison completed!';
			}
		} catch (err) {
			progress = `Error: ${err}`;
		} finally {
			running = false;
		}
	}
</script>

